package com.example;

import java.util.function.Predicate;

public class MainApp {

    public static void main(String[] args) {
        Predicate<Integer> isEven = n -> n % 2 == 0;

        int number1 = 10;
        int number2 = 7;

        System.out.println(number1 + " là số chẵn? " + isEven.test(number1));
        System.out.println(number2 + " là số chẵn? " + isEven.test(number2));
    }
}
